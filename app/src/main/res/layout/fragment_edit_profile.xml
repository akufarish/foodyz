<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.fragments.EditProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganti Sesuai yang diinginkan"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/editProfileTextView"
            android:layout_marginTop="40dp" />

        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/roundedTopImage"
            android:id="@+id/profileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editProfileTextView"
            android:layout_marginTop="35dp"
            android:layout_width="128dp"
            android:layout_height="103.3dp"
            android:src="@drawable/food1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Ganti Profile"
            android:background="@drawable/auth_button"
            app:layout_constraintTop_toBottomOf="@id/profileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/gantiProfileButton"
            android:paddingHorizontal="12dp" />

        <EditText
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Name"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/custom_auth_input"
            app:layout_constraintTop_toBottomOf="@id/gantiProfileButton"
            android:layout_marginTop="36dp"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/nameEditText" />

        <EditText
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Email"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/custom_auth_input"
            app:layout_constraintTop_toBottomOf="@id/nameEditText"
            android:layout_marginTop="36dp"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/emailEditText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Simpan"
            android:background="@drawable/custom_auth_button"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/emailEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/simpanButton"
            android:paddingHorizontal="12dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>