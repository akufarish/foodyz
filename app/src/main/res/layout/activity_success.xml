<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.success.SuccessActivity">

    <ImageView
        android:layout_marginBottom="200dp"
        android:layout_width="241dp"
        android:layout_height="166dp"
        android:src="@drawable/success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/successImageView"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/successTextTitle"
        android:text="Success"
        android:textSize="20sp"
        android:textColor="@color/secondary"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/successImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/successText"
        android:text="Please check your email"
        android:textSize="14sp"
        android:textColor="@color/secondary"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/successTextTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <Button
        android:visibility="gone"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:background="@drawable/custom_auth_button"
        app:layout_constraintTop_toBottomOf="@id/successText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Back"
        android:textColor="@color/white"
        android:layout_marginTop="117dp"
        android:id="@+id/successButton" />


</androidx.constraintlayout.widget.ConstraintLayout>