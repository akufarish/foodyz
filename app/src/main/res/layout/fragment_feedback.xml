<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.fragments.FeedbackFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Your Feedback below"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/editProfileTextView"
            android:layout_marginTop="40dp" />

        <EditText
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Email"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:paddingTop="12dp"
            android:gravity="top"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/custom_auth_input"
            app:layout_constraintTop_toBottomOf="@id/editProfileTextView"
            android:layout_marginTop="36dp"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/emailEditText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Kirim"
            android:background="@drawable/custom_auth_button"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/emailEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/simpanButton"
            android:paddingHorizontal="12dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>